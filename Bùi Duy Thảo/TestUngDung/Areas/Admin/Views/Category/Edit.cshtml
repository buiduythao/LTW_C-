@model ModelEF.Model.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section title{
    Category / Create
}
<div class="card mb-4">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-around">
            <h5>Sửa thể loại sách</h5>
            @Html.ActionLink("Quay lại", "Index", "Category", new { @class = "btn btn-info" })
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Cat_ID)

    <div class="form-group">
        @Html.LabelFor(model => model.Cat_Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Cat_Name, new { @class = "form-control py-4", @id = "inputNameCr", @placeholder = "Nhập tên thể loại...", required = "required" })
            @Html.ValidationMessageFor(model => model.Cat_Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Cat_Description, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Cat_Description, new { @class = "form-control", @placeholder = "Nhập thông tin thể loại..." })
            @Html.ValidationMessageFor(model => model.Cat_Description, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu" class="btn btn-primary" />
        </div>
    </div>
</div>
}

