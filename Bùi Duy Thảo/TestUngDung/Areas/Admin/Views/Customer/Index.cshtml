@model IEnumerable<ModelEF.Model.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section title{
    Customer
}
<div class="card mb-4">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-around">
            <h5>Danh sách khách hàng</h5>
        </div>
    </div>
</div>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Danh sách khách hàng
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tài khoản</th>
                        <th>Họ tên</th>
                        <th>Email</th>
                        <th>Số điện thoại</th>
                        <th>Địa chỉ</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @{ var i = 1;}
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.Cus_ID">
                            <td>@i</td>
                            <td>
                                @item.Cus_UserName
                            </td>
                            <td>
                                @item.Cus_Name
                            </td>
                            <td>
                                @item.Cus_Email
                            </td>
                            <td>
                                @item.Cus_Phone
                            </td>
                            <td>
                                @item.Cus_Address
                            </td>
                            <td>
                                @item.Cus_Status
                            </td>
                            <td>
                                <a href=@Url.Action("Edit", "Customer", new { id =@item.Cus_ID }) class="btn btn-info">Cập nhật <i class="fa fa-edit ml-1"></i></a>&nbsp;
                                @if (item.Cus_Status == "Blocked")
                                {
                                    @Ajax.ActionLink("Xóa ", "Delete", new { @id = item.Cus_ID }, new AjaxOptions
                                    {
                                        Confirm = "Bạn có chắc chắn muốn xóa không ???",
                                        OnComplete = "$('#row_" + @item.Cus_ID + "').remove();",
                                        HttpMethod = "Delete"
                                    }, new { @class = "glyphicon glyphicon-trash btn btn-danger" })
                                }
                            </td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>